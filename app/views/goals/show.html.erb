<h3><%= @goal.title %></h3>
<h3>Description: </h3>
    <%= @goal.description%>
<h3>Cateogry: </h3>
    <%= link_to @goal.category.title, category_path(@goal.category)%>
<h3>Due Date:</h3>
    <%= @goal.due_date%>
<h3>Comments</h3>
    <% @goal.comments.each do |comment|%>
        <p><strong><%= link_to comment.user.username, user_path(comment.user) %></strong> <%= comment.content%> </p> 
    <% end %>
<h3>Cheers </h3>
    <%= @goal.cheers %>


