<h3>Edit Habit</h3>
<section class="py-5 move-section">
      <div class="container move-footer">
        <p class="subtitle text-primary">Edit this habit</p>
        <h1 class="h2 mb-5"> Basic information<span class="text-muted float-right"><%= link_to "Back", habit_path(@habit), method: :get, class: "removelink text-dark"%></span></h1>
          <div class="row">
            <div class="m-auto">
                <% if flash[:errors]%>
                    <% flash[:errors].each do |e| %>
                        <li style="color: red">
                            <%= e %>
                        </li>
                    <%end%>
                <%end%>

                <% if flash[:com]%>
                    <li style="color: red"><%= flash[:com] %></li>
                <%end%>
                <% if flash[:user]%>
                    <li style="color: red"><%= flash[:user] %></li>
                <%end%>


                <%= form_with model:@habit do |f|%>
                    <%= f.label :name %>
                    <br>
                    <%= f.text_field :name, class: "box-color", style: "width: 1020px; height: 37px;"%>
                    <br>
                    <br>
                    <%= f.label :description%>
                    <br>
                    <%= f.text_area :description, class: "box-color", rows: "5", style: "width: 1020px"%>
                    <br>
                    <br>
                    <%= f.submit class: "btn btn-primary", style: "margin-left: 450px"%>
                <% end %>
                 <%= button_to "Delete", @habit, :method => :delete, class: "btn btn-danger my-5", style: "margin-left:480px;" %>
                </div>
               
            </div>
        </div>
    </section>

